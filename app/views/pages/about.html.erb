<div class="app-card-container">
	<div class="card">
		<h1>About Me</h1>
		<hr>
		<div class="row">
			<div class="col-md-4">
				<%= image_tag "profile.jpg", width: "250", alt: "profile picture", class: 'profile-img' %>
				
				<div class="skills">
					<% @skills.each do |skill| %>
						<div class="skill">
							<h4><%= skill.title %></h4>
							<div class="progress">
								<div 
									class="progress-bar progress-bar-striped bg-warning"
									role="progressbar"
									aria-valuenow="<%= skill.percent_utilised %>"
									aria-valuemax="100"
									style="width: <%= skill.percent_utilised %>%"
									>
								</div>
							</div>
						</div>
					<% end %>
				</div>
			</div>

			<div class="col-md-8">
				<p>Jr. Software Engineer at TekNuk Pakistan</p>
				
				<p>
					<button 
						class="btn btn-primary" 
						type="button" 
						data-toggle="collapse" 
						data-target="#jobHistory"
						aria-expanded="false"
						aria-controls="jobHistory"
						>
							Job Histroy
					</button>

					<button 
						class="btn btn-primary" 
						type="button" 
						data-toggle="collapse" 
						data-target="#education"
						aria-expanded="false"
						aria-controls="education"
						>
							Education
					</button>
				</p>
				<p>
					<div class="collapse" id="jobHistory">
						<div class="card card-block">
							Job 1
						</div>
						<div class="card card-block">
							Job 2
						</div>
						<div class="card card-block">
							Job 3
						</div>
						<div class="card card-block">
							Job 4	
						</div>
					</div>

					<div class="collapse" id="education">
						<div class="card card-block">
							school 1
						</div>
						<div class="card card-block">
							college 2
						</div>
						<div class="card card-block">
							college 3
						</div>
						<div class="card card-block">
							university 4	
						</div>
					</div>
				</p>
			</div>
		</div>
	</div>
</div>